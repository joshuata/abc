#include <civlc.h>

// void* $malloc($heap *h, int size);
$scope r = $root;

void main() {
  $scope s = $here;
  double *p = (double *) $malloc(s, 5*sizeof(double));
  double *z = (double *) $malloc($scopeof(p),  5*sizeof(double));
  
  $assert(r > s);
  $assert(r == (r + s));
  $free(p);
  $free(z);
}   
